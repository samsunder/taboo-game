{
  "rules": {
    "gamesV2": {
      "$gameId": {
        ".read": "auth != null",
        ".write": false,
        "players": {
          ".read": "auth != null",
          ".indexOn": ["lastSeen"],
          "$playerId": {
            ".read": "auth != null",
            ".write": false,
            "lastSeen": {
              ".write": "auth != null && auth.uid == $playerId",
              ".validate": "newData.isNumber() && newData.val() <= now + 60000"
            }
          }
        }
      }
    },
    "gamesV2Words": {
      ".read": false,
      ".write": false
    }
  }
}
